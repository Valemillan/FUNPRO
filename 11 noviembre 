      "source": [
        "notas = []\n",
        "n = int(input(\"Cuantas notas vas a ingresar: \"))\n",
        "\n",
        "for i in range(n):\n",
        "    nota = float(input(\"Digite la nota: \"))\n",
        "    notas.append(nota)\n",
        "\n",
        "maxima = max(notas)\n",
        "minima = min(notas)\n",
        "mayores = 0\n",
        "for i in notas:\n",
        "    if i > 3.0:\n",
        "        mayores += 1\n",
        "promedio = sum(notas) / len(notas)\n",
        "\n",
        "print(\"\\nResultados:\")\n",
        "print(\"Nota máxima:\", maxima)\n",
        "print(\"Nota mínima:\", minima)\n",
        "print(\"Notas mayores a 3.0:\", mayores)\n",
        "print(\"Promedio:\", round(promedio, 2))"
      ]
    }
  ]
